<Window x:Class="Demo.GuiMa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="Nhập Mã" Height="450" Width="800"
        Closing="GuiMa_Closing">
    <Grid>
        <Label x:Name="lblGuiMa" Content="Chúng tôi đã gửi mã 6 số về Email mà bạn cung cấp, hãy điền mã đó xuống dưới:" Height="100" Width="720" FontFamily="Times New Roman" FontSize="20" Margin="0,0,0,0"></Label>
        <TextBox x:Name="txtMa" Height="35" Width="160" FontFamily="Times New Roman" FontSize="20" Margin="-20,20,-20,-20"></TextBox>
        <Button x:Name="buttonXacNhanMa" Content="Xác Nhận" Height="30" Width="120" FontFamily="Times New Roman" FontSize="20" Margin="-20,160,-20,-20" Click="buttonXacNhanMa_Click"></Button>
    </Grid>
</Window>
