<Page x:Class="MotoStore.Views.Pages.IOPagePages.IOKhachHangPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MotoStore.Views.Pages.IOPagePages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IOKhachHangPage">

    <Grid>

        <Label x:Name="lbSDTKhachHang"
               Content=" SĐT: " 
               Margin="536,42,113,367"
               FontSize="15"
               Foreground="Black"/>
        <TextBox x:Name="txtSDTKH" Margin="669,42,81,0" VerticalAlignment="Top"/>
        <Label x:Name="lbTenKH"
               Content="Tên Khách Hàng: " 
               Margin="24,42,622,355"
               FontSize="15"
               Foreground="Black"/>
        <TextBox x:Name="txtTenKH" Margin="207,47,543,0" VerticalAlignment="Top"/>
        <Label x:Name="lbNgaySinhKH"
               Content="Ngày Sinh: " 
               Margin="24,106,613,287"
               FontSize="15"
               Foreground="Black"/>
        <TextBox x:Name="txtNgaySinhKH" Margin="210,107,540,0" VerticalAlignment="Top"/>
        <Label x:Name="lbDiaChiKH"
               Content="Địa Chỉ: " 
               Margin="24,163,620,243"
               FontSize="15"
               Foreground="Black"/>
        <TextBox x:Name="txtDiaChiKH" Margin="212,169,538,0" VerticalAlignment="Top" RenderTransformOrigin="0.238,-0.075"/>
        <Label x:Name="lbEmailKH"
               Content="Email: " 
               Margin="536,106,108,300"
               FontSize="15"
               Foreground="Black"/>
        <TextBox x:Name="txtEmailKH" Margin="669,109,81,0" VerticalAlignment="Top"/>
        <Label x:Name="lbGioiTinh"
               Content="Giới Tính: " 
               Margin="536,222,156,179"
               FontSize="15"
               Foreground="Black"/>
        <ComboBox x:Name="cmbGioiTinhKH" Margin="670,221,75,0" VerticalAlignment="Top">
            <ComboBoxItem>Nam</ComboBoxItem>
            <ComboBoxItem>Nữ</ComboBoxItem>
        </ComboBox>
        <Label x:Name="lbLoaiKH"
               Content="Loại Khách Hàng: " 
               Margin="536,166,165,235"
               FontSize="15"
               Foreground="Black"/>
        <ComboBox x:Name="cmbLoaiKH" Margin="672,170,72,0" VerticalAlignment="Top">
            <ComboBoxItem>Thường</ComboBoxItem>
            <ComboBoxItem>Thân Quen</ComboBoxItem>
            <ComboBoxItem>VIP</ComboBoxItem>

        </ComboBox>
        <Button x:Name="btnAddNewKhachHang" FontWeight="UltraBlack" Content="THÊM MỚI" Margin="525,391,0,0" VerticalAlignment="Top" Height="48" Width="117" Click="btnAddNewKhachHang_Click"/>

    </Grid>
</Page>
