<Page x:Class="MotoStore.Views.Pages.IOPagePages.IOHoaDonPage"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:helpers="clr-namespace:MotoStore.Helpers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MotoStore.Views.Pages.IOPagePages"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IOHoaDonPage">

    <Page.Resources>
        <helpers:DateTimeConverter x:Key="DateTimeConverter"/>
        
    </Page.Resources>
    <Grid>

        <Label x:Name="lbMaSPHD"
               Content="Mã Sản Phẩm: " 
               Margin="45,50,602,367"
               FontSize="15"
               Foreground="Black"
               FontWeight="Medium"/>

        <StackPanel Margin="247,36,503,0" VerticalAlignment="Top" Height="60" PreviewKeyDown="StackPanel_PreviewKeyDown">
            <ComboBox x:Name="cmbMaSPHD" ItemsSource="{Binding}" IsEditable="True"  DropDownClosed="cmbMaSPHD_DropDownClosed" >

                <ComboBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ComboBoxItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <Grid x:Name="gd" TextElement.Foreground="Black">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Margin="5" Grid.Column="0" Text="{Binding MaMh}"/>
                                        <TextBlock Margin="5" Grid.Column="1" Text="{Binding TenMh}"/>
                                        <TextBlock Margin="5" Grid.Column="2" Text="{Binding SoPhanKhoi}"/>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="ComboBoxItem.IsSelected" Value="True">
                                            <Setter TargetName="gd"  Property="Background" Value="Gray"></Setter>
                                            <Setter TargetName="gd"  Property="TextElement.Foreground" Value="White"></Setter>
                                        </Trigger>




                                        <Trigger Property="ComboBoxItem.IsHighlighted" Value="True">
                                            <Setter TargetName="gd"  Property="Background" Value="Blue"></Setter>
                                            <Setter TargetName="gd"  Property="TextElement.Foreground" Value="Black"></Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>
        </StackPanel>
        

        <!--Mã Sản Phẩm trong Hóa Đơn-->
        <Label x:Name="lbMaKHHD"
               Content="Mã Khách Hàng: " 
               Margin="45,105,597,317"
               FontSize="15"
               Foreground="Black"
               FontWeight="Medium"/>

        <!--Mã Khách Hàng trong Hóa Đơn-->
        <StackPanel  Margin="247,97,503,0" VerticalAlignment="Top" Height="34" PreviewKeyDown="StackPanel_PreviewKeyDown">
            <ComboBox x:Name="cmbMaKHHD" ItemsSource="{Binding}" DropDownClosed="cmbMaKHHD_DropDownClosed" IsEditable="True"  >

                <ComboBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ComboBoxItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <Grid x:Name="gd" TextElement.Foreground="Black">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Margin="5" Grid.Column="0" Text="{Binding MaKh}"/>
                                        <TextBlock Margin="5" Grid.Column="1" Text="{Binding HoTenKh}"/>
                                        <TextBlock Margin="5" Grid.Column="2" Text="{Binding NgSinh,Converter={StaticResource DateTimeConverter}}"/>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="ComboBoxItem.IsSelected" Value="True">
                                            <Setter TargetName="gd"  Property="Background" Value="Gray"></Setter>
                                            <Setter TargetName="gd"  Property="TextElement.Foreground" Value="White"></Setter>
                                        </Trigger>

                                        <Trigger Property="ComboBoxItem.IsHighlighted" Value="True">
                                            <Setter TargetName="gd"  Property="Background" Value="Blue"></Setter>
                                            <Setter TargetName="gd"  Property="TextElement.Foreground" Value="Black"></Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ComboBox.ItemContainerStyle>

            </ComboBox>
        </StackPanel>
        

        <!--Mã Nhân Viên trong Hóa Đơn-->
        <Label x:Name="lbNgayXuatHD"
               Content="Ngày Xuất HĐ: " 
               Margin="47,162,595,256"
               FontSize="15"
               Foreground="Black"
               FontWeight="Medium"/>
        <Label x:Name="lblDauSao" 
               Height="30"
               FontSize="15"
               Content="*"
               Foreground="Red"
               FontWeight="Medium"
               Margin="153,47,624,373"/>
        
        <Label x:Name="lblThongBao1" Height="20" FontSize="10" Width="150"
                               Foreground="red" 
                               FontWeight="Medium" 
                               Margin="630,74,33,360"
                               />
        <TextBox x:Name="txtNgayXuatHD" Margin="248,157,502,0" VerticalAlignment="Top" Height="35"  >
            <i:Interaction.Behaviors>
                <helpers:TextBoxInputBehavior InputMode="DateInput"/>
            </i:Interaction.Behaviors>
            <TextBox.Text>
                <Binding RelativeSource="{RelativeSource Self}" Path="Tag" Mode="OneWayToSource" UpdateSourceTrigger="PropertyChanged"  >
                    <Binding.ValidationRules>
                        <helpers:CustomValidationRule ValidationMode="DateValidation"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <StackPanel Margin="248,157,502,0" >
                        <AdornedElementPlaceholder x:Name="textBox" Height="35" />
                        <TextBlock Text="{Binding Path=(Validation.Errors)/ErrorContent}" 
                                   Foreground="Red"/>
                    </StackPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
        </TextBox>
        <Label x:Name="lbsoLuongHD"
               Content="Số Lượng: " 
               Margin="591,42,53,384"
               FontSize="15"
               Foreground="Black"
               FontWeight="Medium"/>
        <!--Số Lượng SP Xuất ra trong Hóa Đơn-->
        <TextBox x:Name="txtSoLuongHD" Margin="732,38,33,0" VerticalAlignment="Top" TextChanged="txtSoLuongHD_TextChanged" LostFocus="txtSoLuongHD_LostFocus">
            <i:Interaction.Behaviors>
                <helpers:TextBoxInputBehavior InputMode="DigitInput"/>
            </i:Interaction.Behaviors>
        </TextBox>
        <Label x:Name="lbGiamGiaHD"
               Content="Giảm Giá: " 
               Margin="591,97,120,316"
               FontSize="15"
               Foreground="Black"
               FontWeight="Medium"/>
        <TextBox x:Name="txtGiamGiaHD" Margin="732,93,33,0" VerticalAlignment="Top" IsReadOnly="True" TextChanged="txtGiamGiaHD_TextChanged"/>
        <Label x:Name="lbThanhTienHD"
               Content="Thành Tiền: " 
               Margin="593,160,118,239"
               FontSize="15"
               Foreground="Black"
               FontWeight="Medium"/>
        <TextBox x:Name="txtThanhTienHD" Margin="732,148,33,0" VerticalAlignment="Top" IsReadOnly="True"/>
        <Button x:Name="btnAddNewHoaDon" FontWeight="UltraBlack" Content="THÊM MỚI" Margin="658,243,0,0" VerticalAlignment="Top" Height="48" Width="117" Click="btnAddNewHoaDon_Click" FontSize="15"/>
        <ui:Button x:Name="btnRefresh" FontWeight="UltraBlack" Icon="ArrowClockwise24" Height="30" Width="40" Click="btnRefresh_Click" Margin="528,36,0,0" VerticalAlignment="Top" FontSize="15"/>
        <ui:Button x:Name="btnRefreshKH" FontWeight="UltraBlack" Icon="ArrowClockwise24" Height="30" Width="40" Click="btnRefreshKH_Click" Margin="528,97,0,0" VerticalAlignment="Top" FontSize="15"/>
        <Label x:Name="lblDauSao_Copy" 
            Height="30"
            FontSize="15"
            Content="*"
            Foreground="Red"
            FontWeight="Medium"
            Margin="159,102,618,318"/>
        <Label x:Name="lblDauSao_Copy1" 
            Height="30"
            FontSize="15"
            Content="*"
            Foreground="Red"
            FontWeight="Medium"
            Margin="161,160,616,260"/>
        <Label x:Name="lblDauSao_Copy2" 
            Height="30"
            FontSize="15"
            Content="*"
            Foreground="Red"
            FontWeight="Medium"
            Margin="685,34,92,386"/>


    </Grid>
</Page>
