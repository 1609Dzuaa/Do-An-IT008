<ui:UiPage
    x:Class="MotoStore.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MotoStore.Views.Pages"
    xmlns:model="clr-namespace:MotoStore.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    Scrollable="True"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid Margin="56,0,0,0">
        <DockPanel>
            <Grid Height="50"
                  Width="300"
                  Margin="682,-485,0,0">
                <ui:Button
                Name="btnDgXuatDashBoard"
                DockPanel.Dock="Right"
                VerticalAlignment="Top"
                Margin="155,0,10,0"
                Height="40"
                Width="130"
                FontSize="17"
                FontWeight="Medium"
                Content="Đăng Xuất"
                Icon="SignOut24"
                Appearance="Danger" />
                
                <ui:Button x:Name="btnDgNhapDashBoard"
                DockPanel.Dock="Right"
                VerticalAlignment="Top"
                Content="Đăng Nhập"
                Margin="20,0,0,0"
                Height="40"
                Width="130"
                FontSize="17"
                FontWeight="Medium"
                CommandParameter="open_window_login" Click="btnDgNhapDashBoard_Click" Background="#FF0027FF"
             />
            </Grid>
            
        </DockPanel>
    </Grid>
</ui:UiPage>