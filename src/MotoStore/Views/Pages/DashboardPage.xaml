<ui:UiPage
    x:Class="MotoStore.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MotoStore.Views.Pages"
    xmlns:model="clr-namespace:MotoStore.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    Scrollable="True"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid Margin="56,0,0,0">
        <DockPanel>
            <ui:Button
                Name="btnDgXuatDashBoard"
                DockPanel.Dock="Right"
                VerticalAlignment="Top"
                Margin="0,0,10,0"
                Height="35"
                Width="125"
                FontSize="16.15"
                FontWeight="Medium"
                FontFamily="Great Vibes"
                Content="Đăng Xuất"
                Icon="SignOut24"
                Appearance="Danger" />
            <ui:Button x:Name="btnDgNhapDashBoard"
                DockPanel.Dock="Right"
                VerticalAlignment="Top"
                Content="Đăng Nhập"
                Margin="710,0,0,0"
                Height="35"
                Width="120"
                FontSize="17"
                FontWeight="Medium"
                FontFamily="Great Vibes"
                CommandParameter="open_window_login" Click="btnDgNhapDashBoard_Click" Background="#FF0027FF"
             />
        </DockPanel>
    </Grid>
</ui:UiPage>