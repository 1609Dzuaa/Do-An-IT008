<Page x:Class="MotoStore.Views.Pages.ReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MotoStore.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportPage">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="DeepSkyBlue" BorderThickness="0" CornerRadius="20">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="7" Direction="330" Color="Black" ShadowDepth="4" Opacity="0.3"></DropShadowEffect>
                            </Border.Effect>
                            <ContentPresenter x:Name="cp" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="White"></ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#E0F2F1"></Setter>
                                <Setter TargetName="cp" Property="TextBlock.Foreground" Value="Gray"></Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="skyblue"></Setter>
                                <Setter TargetName="cp" Property="TextBlock.Foreground" Value="White"></Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="midnightblue"></Setter>
                                <Setter TargetName="cp" Property="TextBlock.Foreground" Value="White"></Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Border>
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#462AD8" Offset="1"/>
                    <GradientStop Color="#1B1448" Offset="0.85"/>
                    <GradientStop Color="#060531" Offset="0.05"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border
                x:Name="brdMHBanE"
                CornerRadius="25"
                Height="150"
                Width="200"
                Margin="58,279,542,21"
                Background="BlueViolet"
                MouseMove="brdMHBanE_MouseMove"
                MouseLeave="brdMHBanE_MouseLeave">
                <Grid>
                    <Label Content="Mặt Hàng Bán Ít Nhất"
                        Foreground="Black"
                        FontSize="18"
                        FontWeight="Bold"
                        Margin="7,15,0,0"/>

                    <TextBlock x:Name="txtblThgTinMHBanE"
                        Height="80"
                        Margin="110,35,0,10"
                        FontSize="12"
                        FontWeight="Bold"
                        TextWrapping="Wrap"/>
                </Grid>

            </Border>
        </Border>

        <Border
                    x:Name="brdMHBanChay"
                    CornerRadius="25"
                    Height="150"
                    Width="200"
                    Margin="58,95,542,207"
                    Background="NavajoWhite"
                    MouseMove="brdMHBanChay_MouseMove"
                    MouseLeave="brdMHBanChay_MouseLeave">
            <Grid>
                <Label Content="Mặt Hàng Bán Chạy Nhất"
                       Foreground="Black"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="5,15,0,0"></Label>

                <TextBlock x:Name="txtblThgTinMHBanChay"
                           Height="80"
                           Margin="110,35,0,10"
                           FontSize="12"
                           FontWeight="Bold"
                           TextWrapping="Wrap"/>
            </Grid>

        </Border>
        <Border
             x:Name="brdNVNgSuat"
             CornerRadius="25"
             Height="150"
             Width="200"
             Margin="321,95,279,207"
             Background="WhiteSmoke"
             MouseMove="brdNVNgSuat_MouseMove"
             MouseLeave="brdNVNgSuat_MouseLeave">
            <Grid>
                <Label Content="Nhân Viên Năng Suất Nhất"
                       Foreground="Black"
                       FontSize="15"
                       FontWeight="Bold"
                       Margin="5,15,0,0"></Label>
                <TextBlock
                        x:Name="txtblAnh"
                        FontWeight="Medium"
                        FontSize="20"
                        Height="90"
                        Width="90"
                        Margin="0,0,110,10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom">
                    <TextBlock.Background>
                        <ImageBrush ImageSource="C:\Users\ADMIN\Documents\GitHub\Phan-mem-quan-ly-cua-hang-xe-may\src\MotoStore\Views\Pages\Images\NhvienNgSuat.png" 
                                    Stretch="Uniform"/>
                    </TextBlock.Background>
                </TextBlock>
                <TextBlock x:Name="txtblThgTinNVNgSuat"
                           Height="80"
                           Margin="90,30,0,10"
                           FontSize="12.5"
                           FontWeight="Bold"
                           TextWrapping="Wrap"/>
            </Grid>
        </Border>
        <Border
            x:Name="brdSoXeBanDcThgNay"
            CornerRadius="25"
            Height="150"
            Width="200"
            Margin="576,95,24,206"
            Background="LightSkyBlue"
            MouseMove="brdSoXeBanDcThgNay_MouseMove"
            MouseLeave="brdSoXeBanDcThgNay_MouseLeave">
            <Grid>
                <Label Content="Số Xe Bán Được Tháng Này"
                       Foreground="Black"
                       FontSize="15"
                       FontWeight="Bold"
                       Margin="5,15,0,0"></Label>
                <TextBlock
                        x:Name="txtblAnhSoXe"
                        FontWeight="Medium"
                        FontSize="20"
                        Height="80"
                        Width="70"
                        Margin="0,0,120,17"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom">
                    <TextBlock.Background>
                        <ImageBrush ImageSource="C:\Users\ADMIN\Documents\GitHub\Phan-mem-quan-ly-cua-hang-xe-may\src\MotoStore\Views\Pages\Images\IconXeMay.png" 
                                    Stretch="Uniform"/>
                    </TextBlock.Background>
                </TextBlock>
                <TextBlock x:Name="txtblThgTinSoXeBanDc"
                           Height="80"
                           Margin="125,70,0,10"
                           FontSize="30"
                           FontWeight="Medium"/>
            </Grid>
        </Border>
        <Border
            x:Name="brdDoanhThuThgNay"
            CornerRadius="25"
            Height="150"
            Width="200"
            Margin="576,279,24,21"
            Background="LightGreen"
            MouseMove="brdDoanhThuThgNay_MouseMove"
            MouseLeave="brdDoanhThuThgNay_MouseLeave">
            <Grid>
                <Label Content=" Doanh Thu Tháng Này"
                       Foreground="Black"
                       FontSize="17.5"
                       FontWeight="Bold"
                       Margin="5,15,0,0"></Label>
                <TextBlock
                        x:Name="txtblMoney"
                        FontWeight="Medium"
                        FontSize="20"
                        Height="80"
                        Width="70"
                        Margin="0,0,120,17"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom">
                    <TextBlock.Background>
                        <ImageBrush ImageSource="C:\Users\ADMIN\Documents\GitHub\Phan-mem-quan-ly-cua-hang-xe-may\src\MotoStore\Views\Pages\Images\money.png" 
                                    Stretch="Uniform"/>
                    </TextBlock.Background>
                </TextBlock>
                <TextBlock x:Name="txtblDoanhThu"
                           Height="80"
                           Margin="100,55,0,20"
                           FontSize="20"
                           FontWeight="Bold"
                           TextWrapping="Wrap"/>
            </Grid>
        </Border>
        <Border
            x:Name="brdKHVIP"
            CornerRadius="25"
            Height="150"
            Width="200"
            Margin="40,279,0,21"
            Background="LightPink"
            MouseMove="brdKHVIP_MouseMove"
            MouseLeave="brdKHVIP_MouseLeave">
            <Grid>
                <Label Content="Khách Hàng Chi Nhiều Nhất"
                       Foreground="Black"
                       FontSize="14.5"
                       FontWeight="Bold"
                       Margin="5,15,0,0"></Label>
                <TextBlock
                        x:Name="txtblVip"
                        FontWeight="Medium"
                        FontSize="20"
                        Height="99"
                        Width="97"
                        Margin="0,0,103,10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom">
                    <TextBlock.Background>
                        <ImageBrush ImageSource="C:\Users\ADMIN\Documents\GitHub\Phan-mem-quan-ly-cua-hang-xe-may\src\MotoStore\Views\Pages\Images\VIP-removebg-preview.png" 
                                    Stretch="Uniform"/>
                    </TextBlock.Background>
                </TextBlock>
                <TextBlock x:Name="txtblThgTinKHVIP"
                           Height="80"
                           Margin="90,40,2,17"
                           FontSize="12.5"
                           FontWeight="Bold"
                           TextWrapping="Wrap"/>
            </Grid>
        </Border>
        <Button x:Name="btnBieuDo"
                Content="Biểu Đồ"
                FontSize="20"
                FontWeight="Medium"
                Height="35"
                Width="120"
                Click="btnBieuDo_Click"
                VerticalAlignment="Top"
                HorizontalAlignment="Right">
        </Button>
        <Button x:Name="btnChiTiet"
                Content="Chi Tiết"
                FontSize="20"
                FontWeight="Medium"
                Height="35"
                Width="120"
                Click="btnChiTiet_Click"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="0,0,130,0">
        </Button>
    </Grid>
</Page>
