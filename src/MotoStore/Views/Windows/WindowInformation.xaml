<Window x:Class="MotoStore.Views.Windows.WindowInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MotoStore.Views.Windows"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:helpers="clr-namespace:MotoStore.Helpers"
        Title="WindowInformation" Height="450" Width="500"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="DeepSkyBlue" BorderThickness="0" CornerRadius="10">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="7" Direction="330" Color="Black" ShadowDepth="4" Opacity="0.3"></DropShadowEffect>
                            </Border.Effect>
                            <ContentPresenter x:Name="cp" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="White"></ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#E0F2F1"></Setter>
                                <Setter TargetName="cp" Property="TextBlock.Foreground" Value="Gray"></Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="skyblue"></Setter>
                                <Setter TargetName="cp" Property="TextBlock.Foreground" Value="White"></Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="midnightblue"></Setter>
                                <Setter TargetName="cp" Property="TextBlock.Foreground" Value="White"></Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Border>
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="1"/>
                    <GradientStop Color="DarkMagenta" Offset="0.1"/>
                    <GradientStop Color="#1B1448" Offset="0.85"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <Border Height="350"
                Width="500"
                VerticalAlignment="Center"
                Margin="0"
                CornerRadius="45"
                Background="#151f2d">
            <Grid>
                <Border HorizontalAlignment="Right"
                        Margin="0,0,0,0" 
                        VerticalAlignment="Top" 
                        Width="175"  
                        Height="175" 
                        BorderBrush="White" 
                        BorderThickness="3"
                        CornerRadius="30">
                    <!-- left-top and bottom-right round corners. -->
                    <!--<Border.Background>
                        <ImageBrush x:Name="anhSP" Stretch="Fill"></ImageBrush>
                    </Border.Background>-->
                    <Image x:Name="anhSP"
                           Source="{Binding mathang.Item2}"
                           Stretch="Uniform">
                    </Image>
                </Border>
                <Button x:Name="btnCapNhatAnh"
                        Content="Cập Nhật Ảnh"
                        FontSize="15"
                        FontWeight="Medium"
                        Height="35"
                        Width="115"
                        HorizontalAlignment="Right"
                        Margin="0,50,25,0"
                        Click="btnCapNhatAnh_Click">
                </Button>
                <Label Height="35"
                       Width="100"
                       Content="Mã Mặt Hàng: "
                       Foreground="white"
                       FontSize="15"
                       FontWeight="Medium"
                       Margin="15"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"></Label>
                <Label Height="35"
                       Width="100"
                       x:Name="lblMaMH"
                       Foreground="white"
                       FontSize="15"
                       FontWeight="Medium"
                       Margin="0,15,145,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"></Label>

                <Label Height="35"
                       Width="100"
                       Content="Tên Mặt Hàng: "
                       Foreground="white"
                       FontSize="15"
                       FontWeight="Medium"
                       Margin="15,50,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"></Label>
                <Label Height="35"
                       Width="150"
                       x:Name="lblTenMH"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="Medium"
                       Margin="125,51,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"></Label>

                <Label x:Name="lblSoPhanKhoi"
                       Height="35"
                       Width="100"
                       Content="Số Phân Khối: "
                       Foreground="white"
                       FontSize="15"
                       FontWeight="Medium"
                       Margin="15,85,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"></Label>
                <Label Height="35"
                       Width="100"
                       x:Name="lblSoPK"
                       Foreground="white"
                       FontSize="15"
                       FontWeight="Medium"
                       Margin="125,85,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"></Label>

                <Label x:Name="lblGia"
                       Height="35"
                       Width="115"
                       Content="Giá Bán: "
                       Foreground="white"
                       FontSize="15"
                       FontWeight="Medium"
                       Margin="15,120,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"></Label>
                <TextBox x:Name="txtGiaBan"
                           Height="35"
                           Width="160"
                           Background="#0fff"
                           Foreground="White"
                           FontSize="15"
                           FontWeight="Medium"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Center"
                           Margin="0,112,185,0"
                           GotFocus="txtGiaBan_GotFocus"
                           LostFocus="txtGiaBan_LostFocus">
                    <i:Interaction.Behaviors>
                        <helpers:TextBoxInputBehavior InputMode="DecimalInput" JustPositiveDecimalInput="False" />
                    </i:Interaction.Behaviors>
                </TextBox>

                <Label x:Name="lblMau"
                       Height="35"
                       Width="115"
                       Content="Màu Sắc: "
                       Foreground="white"
                       FontSize="15"
                       FontWeight="Medium"
                       Margin="15,155,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"></Label>
                <TextBox x:Name="txtMau"
                         Height="35"
                         Width="130"
                         FontWeight="Medium"
                         FontSize="15"
                         VerticalAlignment="Top"
                         HorizontalAlignment="Center"
                         Margin="0,147,120,0"
                         Background="#0fff"
                         Foreground="White"
                         GotFocus="txtMau_GotFocus"
                         LostFocus="txtMau_LostFocus">
                    <i:Interaction.Behaviors>
                        <helpers:TextBoxInputBehavior InputMode="WordsInput"/>
                    </i:Interaction.Behaviors>
                </TextBox>
    
                <Label x:Name="lblDB"
                       Height="35"
                       Width="75"
                       Content="Đã Bán: "
                       Foreground="white"
                       FontSize="15"
                       FontWeight="Medium"
                       Margin="15,190,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"></Label>
                <Label Height="35"
                       Width="100"
                       x:Name="lblDaBan"
                       Foreground="white"
                       FontSize="15"
                       FontWeight="Medium"
                       Margin="90,190,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"></Label>

                <Label x:Name="lblTonKho"
                       Height="35"
                       Width="80"
                       Content="Tồn Kho: "
                       Foreground="white"
                       FontSize="15"
                       FontWeight="Medium"
                       Margin="15,225,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"></Label>
                <TextBox x:Name="txtTonKho"
                         Height="35"
                         Width="130"
                         FontWeight="Medium"
                         FontSize="15"
                         Margin="0,215,150,0"
                         VerticalAlignment="Top"
                         HorizontalAlignment="Center"
                         Background="#0fff"
                         Foreground="White"
                         GotFocus="txtTonKho_GotFocus"
                         LostFocus="txtTonKho_LostFocus">
                    <i:Interaction.Behaviors>
                        <helpers:TextBoxInputBehavior InputMode="DigitInput" JustPositiveDecimalInput="False"/>
                    </i:Interaction.Behaviors>
                </TextBox>

                <Label x:Name="lblHangSanXuat"
                       Height="35"
                       Width="145"
                       Content="Hãng Sản Xuất:"
                       Foreground="white"
                       FontSize="15"
                       FontWeight="Medium"
                       Margin="15,260,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"></Label>
                <Label Height="35"
                       Width="100"
                       x:Name="lblHangSX"
                       Foreground="white"
                       FontSize="15"
                       FontWeight="Medium"
                       Margin="175,260,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"></Label>

                <Label x:Name="lblXX"
                       Height="35"
                       Width="110"
                       Content="Xuất Xứ: "
                       Foreground="white"
                       FontSize="15"
                       FontWeight="Medium"
                       Margin="15,295,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"></Label>
                <Label Height="35"
                       Width="130"
                       x:Name="lblXuatXu"
                       Foreground="white"
                       FontSize="15"
                       FontWeight="Medium"
                       Margin="130,295,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"></Label>
                <Button x:Name="btnLuu"
                Height="25"
                Width="120"
                Content="Lưu Chỉnh Sửa"
                FontSize="15"
                FontWeight="Bold"
                Click="btnLuu_Click"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center">
                </Button>
                <Button x:Name="btnNext"
                        Height="25"
                        Width="50"
                        VerticalAlignment="Bottom"
                        Margin="200,0,0,0"
                        FontSize="15"
                        FontWeight="Bold"
                        Content=">"
                        Click="btnNext_Click"
                        Visibility="Collapsed">
                </Button>
                <Button x:Name="btnBack"
                        Height="25"
                        Width="50"
                        VerticalAlignment="Bottom"
                        Margin="0,0,200,0"
                        FontSize="15"
                        FontWeight="Bold"
                        Content="&lt;"
                        Click="btnBack_Click"
                        Visibility="Collapsed">
                </Button>
            </Grid>
        </Border>

        <Label x:Name="lblThongTin"
               Content="Thông Tin"
               Foreground="Snow"
               FontWeight="Bold"
               FontSize="20"
               VerticalAlignment="Top"
               HorizontalAlignment="Center" Margin="0,20,0,0"></Label>

        <Button x:Name="btnMinimize"
                Height="25"
                Width="50"
                Content="-"
                FontSize="20"
                FontWeight="Bold"
                Click="btnMinimize_Click"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="0,0,54,0"
                >
        </Button>
        <Button x:Name="btnClose"
                Height="25"
                Width="50"
                Content="X"
                FontSize="17"
                FontWeight="Bold"
                Click="btnClose_Click"
                VerticalAlignment="Top"
                HorizontalAlignment="Right">
        </Button>

    </Grid>
</Window>
